<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>internet.store.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>internet.store.controllers.usercontroller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/user/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>internet.store.controllers.usercontroller.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>internet.store.controllers.usercontroller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProduct</servlet-name>
        <servlet-class>internet.store.controllers.productcontroller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProduct</servlet-name>
        <url-pattern>/product/allProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>internet.store.controllers.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/injectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productSetUp</servlet-name>
        <servlet-class>internet.store.controllers.productcontroller.ProductSetUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productSetUp</servlet-name>
        <url-pattern>/productSetUp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShopCartAddProduct</servlet-name>
        <servlet-class>internet.store.controllers.shopcartcontroller.ShopCartAddProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopCartAddProduct</servlet-name>
        <url-pattern>/shopcart/addProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductFromShopCart</servlet-name>
        <servlet-class>internet.store.controllers.shopcartcontroller.ShopCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductFromShopCart</servlet-name>
        <url-pattern>/shopcart/productFromShopCart</url-pattern>
    </servlet-mapping>

</web-app>
